<Window x:Class="AirportManagerSystem.View.FlightProcessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AirportManagerSystem.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Flight Process" Height="650" Width="1040">
    <StackPanel>
        <GroupBox Header="Filter Flight" Margin="15,15,15,0">
            <GroupBox.Content>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,5,5,5">

                        <TextBlock Margin="5" VerticalAlignment="Center">Sort by:</TextBlock>
                        <ComboBox Name="cbSortBy" Width="150" Margin="5"></ComboBox>
                        
                </StackPanel>
            </GroupBox.Content>
        </GroupBox>

        <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="15" Width="995" Height="500">
            <StackPanel Name="stpFlights">

            </StackPanel>
        </ScrollViewer>
    </StackPanel>

</Window>
